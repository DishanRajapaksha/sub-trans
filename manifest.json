{
  "manifest_version": 3,
  "name": "Arte Subtitle Translator",
  "version": "0.0.1",
  "description": "Detects Arte.tv subtitles and prepares them for translation.",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "permissions": [
    "storage",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "https://www.arte.tv/*",
    "https://arte-cmafhls.akamaized.net/*",
    "https://api.openai.com/*",
    "https://api.mistral.ai/*",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.arte.tv/*"
      ],
      "js": [
        "src/content/index.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "public/options.html",
    "open_in_tab": true
  }
}